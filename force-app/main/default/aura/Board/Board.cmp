<aura:component implements="flexipage:availableForAllPageTypes">
    
    <aura:handler name="init" value="{!this}"  action="{!c.doInIt}"/>
    <!-- <aura:handler name="render" value="{!this}"  action="{!c.doRender}"/> -->
    <!-- <aura:handler name="onClick" event="c:BlockClickEvent"  action="{!c.blockClickHandler}"/> -->


    <aura:attribute name="words" access="private" type="List"/>
    <aura:attribute name="winWord" access="private" type="String"/>
    <aura:attribute name="clickCount" access="private" type="Integer" default="0"/>
    <aura:attribute name="blockSize" access="private" type="Integer"/>
    <aura:attribute name="mode" type="String" default="medium"/>
    <aura:attribute name="result" type="String" access="private"/>
    <aura:attribute name="boardDisabled" type="Boolean" access="private" default="false"/>

    <aura:method name="startGame" action="{!c.doInIt}" description="Start new game again"></aura:method>
    

    <div class="board">
        <lightning:layout >
            <lightning:layoutItem  padding="around-small">
                <div class="slds-text-heading_medium">
                    Word : <span class="winWord">{!v.winWord}</span>
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem  padding="around-small">
                <div class="slds-text-heading_medium">
                    {!v.result}
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem  padding="around-small">
                <div class="slds-text-heading_medium">
                    Move Left : {!(3- v.clickCount)}
                </div>
            </lightning:layoutItem>
        </lightning:layout>

        <aura:if isTrue="{!v.boardDisabled}">
            <div class="board-disabled"></div>
        </aura:if>

        <lightning:layout multipleRows="true">
            <aura:iteration items="{!v.words}" var="word">
                <lightning:layoutItem size="{!v.blockSize}" padding="around-small">
                    <c:Block label="{!word}" onClick="{!c.blockClickHandler}"/>
                </lightning:layoutItem>
            </aura:iteration>
        </lightning:layout>
    </div>
</aura:component>	
